<!DOCTYPE html>
<html>
<head>
    <title>All Medicines</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            padding: 30px;
        }

        h2 {
            text-align: center;
            color: #2a9d8f;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            margin-top: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #2a9d8f;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

    </style>
</head>
<body>

<h2>All Medicines</h2>

<%
    List<Medicine> medicines = (List<Medicine>) request.getAttribute("medicines");
    if (medicines != null && !medicines.isEmpty()) {
%>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Company</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        <%
            for (Medicine m : medicines) {
        %>
        <tr>
            <td><%= m.getId() %></td>
            <td><%= m.getName() %></td>
            <td><%= m.getCompany() %></td>
            <td><%= m.getPrice() %></td>
            <td><%= m.getQuantity() %></td>
        </tr>
        <% } %>
    </table>
<% } else { %>
    <p style="text-align:center; color:red;">No medicines available!</p>
<% } %>

</body>
