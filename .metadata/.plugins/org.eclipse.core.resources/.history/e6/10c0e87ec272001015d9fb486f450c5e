    <%
        String medName = request.getParameter("medName");

        if (medName != null && !medName.trim().equals("")) {
            try {
                Class.forName("com.mysql.cj.jdbc.Driver");
                Connection con = DriverManager.getConnection(
                    "jdbc:mysql://localhost:3306/med2025", "root", "root@123");

                PreparedStatement ps = con.prepareStatement("SELECT * FROM medicine WHERE name = ?");
                ps.setString(1, medName);
                ResultSet rs = ps.executeQuery();

                if (rs.next()) {
    %>
        <table>
            <tr>
                <th>Name</th>
                <th>Company</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Expiry Date</th>
                <th>Status</th>
            </tr>
            <tr>
                <td><%= rs.getString("name") %></td>
                <td><%= rs.getString("company") %></td>
                <td>‚Çπ<%= rs.getDouble("price") %></td>
                <td><%= rs.getInt("quantity") %></td>
                <td><%= rs.getDate("expiry") %></td>
                <td><%= rs.getInt("quantity") > 0 ? "Available" : "Out of Stock" %></td>
            </tr>
        </table>
    <%
                } else {
    %>
        <p class="not-found">‚ùå Medicine not found!</p>
    <%
                }

                rs.close();
                ps.close();
                con.close();
            } catch (Exception e) {
    %>
        <p class="not-found">‚ö†Ô∏è Error: <%= e.getMessage() %></p>
    <%
            }
        }
